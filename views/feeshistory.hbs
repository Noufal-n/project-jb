<section>
  <!--for demo wrap-->
  <h1>Fee History Table </h1>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Amount</th>
          <th>date</th>
          <th>time</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        {{#each history}}
        <tr>

          <td>₹{{this.amount}}</td>
          <td>{{this.date}}</td>
          <td>-{{this.time}}</td>

        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>


