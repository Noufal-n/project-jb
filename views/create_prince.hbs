    <script>





        $(document).ready(function () {
            $('#formAccountSettings').on('submit', function (e) {
                e.preventDefault(); // prevent the default form submission

                var formData = $(this).serialize(); // encode the form data

                $.ajax({
                    type: 'POST',
                    url: '/manager/principal_account_creation',
                    data: formData, // pass the form data as the AJAX data parameter
                    success: function (response) {
                        console.log(response);
                        if (response.user) {

                            Toastify({
                                text: "this user is already existed",
                                className: "info",
                                duration: 5000,
                                close: true,
                                gravity: "top", // `top` or `bottom`
                                position: "right", // `left`, `center` or `right`
                                stopOnFocus: true, // Prevents dismissing of toast on hover
                                style: {
                                    background: "linear-gradient(to right, #FF0000, #FF0000)",
                                }
                            })
                                .showToast();


                        } else if (response.acknowledged) {

                            Toastify({
                                text: "User added Successfully",
                                className: "info",
                                duration: 5000,
                                close: true,
                                gravity: "top", // `top` or `bottom`
                                position: "right", // `left`, `center` or `right`
                                stopOnFocus: true, // Prevents dismissing of toast on hover
                                style: {
                                    background: "linear-gradient(to right, #696cff, #696cff)",
                                }
                            })
                                .showToast();



                            setTimeout(() => {
                                location.reload();
                            }, 2000);

                        } else {
                            Toastify({
                                text: "Somthing went worng",
                                className: "info",
                                duration: 5000,
                                close: true,
                                gravity: "top", // `top` or `bottom`
                                position: "right", // `left`, `center` or `right`
                                stopOnFocus: true, // Prevents dismissing of toast on hover
                                style: {
                                    background: "linear-gradient(to right, #FF0000, #FF0000)",
                                }
                            })
                                .showToast();
                        }


                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
            });
        });

        const form = document.getElementById('formAccountDeactivation');

        form.addEventListener('submit', (event) => {
            event.preventDefault(); // prevent the form from submitting normally

            const formData = new FormData(form); // get the form data

            fetch('/manager/delete/prince', {
                method: 'DELETE',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    // do something with the JSON response
                    console.log(data);

                    if (data.deletedCount > 0) {
                        Toastify({
                            text: "Successfuly Deleted HOD",
                            className: "info",
                            duration: 5000,
                            close: true,
                            gravity: "top", // `top` or `bottom`
                            position: "right", // `left`, `center` or `right`
                            stopOnFocus: true, // Prevents dismissing of toast on hover
                            style: {
                                background: "linear-gradient(to right, #FF0000, #FF0000)",
                            }
                        })
                            .showToast();
                        setTimeout(() => {
                            location.reload();
                        }, 3000);
                    }else{
                        Toastify({
                            text: "Something went wrong",
                            className: "info",
                            duration: 5000,
                            close: true,
                            gravity: "top", // `top` or `bottom`
                            position: "right", // `left`, `center` or `right`
                            stopOnFocus: true, // Prevents dismissing of toast on hover
                            style: {
                                background: "linear-gradient(to right, #FF0000, #FF0000)",
                            }
                        })
                            .showToast();
                    }

                })
                .catch(error => {
                    // handle any errors
                    console.error(error);
                });
        });


    </script>


